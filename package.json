    "@types/node": "^10.12.18",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "graphql-code-generator": "^0.15.2",
    "graphql-codegen-typescript-common": "^0.15.2",
