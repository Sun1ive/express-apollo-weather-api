    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8",
    "mongodb": "^3.1.10",
    "mongoose": "^5.4.1",
