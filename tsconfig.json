{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["node"],
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**"]
}
